                    <StackLayout
                        Grid.Row="1"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                        <Grid
                            HorizontalOptions="FillAndExpand"
                            RowSpacing="20"
                            VerticalOptions="StartAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <xct:TabView
                                    TabContentBackgroundColor="{DynamicResource Gray-White}"
                                    TabIndicatorColor="{DynamicResource PrimaryColor}"
                                    TabItemsSource="{Binding MyTabs}"
                                    TabStripBackgroundColor="{DynamicResource Gray-White}"
                                    TabStripHeight="60"
                                    TabStripPlacement="Top">

                                    <xct:TabViewItem
                                        ControlTemplate="{StaticResource TabItemTemplate}"
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        TapCommand="{Binding ViewAbout}"
                                        Text="About"
                                        TextColor="{DynamicResource SecondaryLightColor}"
                                        TextColorSelected="{DynamicResource SecondaryColor}" />

                                    <xct:TabViewItem
                                        ControlTemplate="{StaticResource TabItemTemplate}"
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        TapCommand="{Binding ViewPhotos}"
                                        Text="Photos"
                                        TextColor="{DynamicResource SecondaryLightColor}"
                                        TextColorSelected="{DynamicResource SecondaryColor}" />

                                    <xct:TabViewItem
                                        ControlTemplate="{StaticResource TabItemTemplate}"
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        TapCommand="{Binding ViewVideos}"
                                        Text="Videos"
                                        TextColor="{DynamicResource SecondaryLightColor}"
                                        TextColorSelected="{DynamicResource SecondaryColor}" />

                                </xct:TabView>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <!--  About view  -->
                                <Grid
                                    HorizontalOptions="FillAndExpand"
                                    IsVisible="{Binding ShowAbout}"
                                    RowSpacing="0"
                                    VerticalOptions="FillAndExpand">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <StackLayout
                                        Grid.Row="0"
                                        Margin="20,0"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand">
                                        <Grid ColumnSpacing="0" RowSpacing="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>

                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                FontSize="20"
                                                HorizontalOptions="StartAndExpand"
                                                Text="{Binding WhereToStay.Name}"
                                                TextColor="{DynamicResource SecondaryColor}" />
                                            <Frame
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="0"
                                                Padding="0"
                                                BorderColor="{DynamicResource SecondaryColor}"
                                                CornerRadius="20"
                                                HasShadow="False"
                                                HeightRequest="40"
                                                HorizontalOptions="EndAndExpand"
                                                WidthRequest="40">
                                                <Label
                                                    FontFamily="FAS"
                                                    FontSize="22"
                                                    HorizontalOptions="CenterAndExpand"
                                                    Text="{x:Static fa:fa.MapMarkerAlt}"
                                                    TextColor="{DynamicResource SecondaryColor}"
                                                    VerticalOptions="CenterAndExpand" />
                                                <Frame.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding OpenMap}" NumberOfTapsRequired="1" />
                                                </Frame.GestureRecognizers>
                                            </Frame>
                                            <StackLayout
                                                Grid.Row="1"
                                                Grid.ColumnSpan="2"
                                                Margin="0,20,0,0"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="FillAndExpand">
                                                <Label
                                                    FontSize="18"
                                                    HorizontalOptions="StartAndExpand"
                                                    Text="Address"
                                                    TextColor="{DynamicResource SecondaryColor}" />
                                                <Label
                                                    Margin="0,-5,0,0"
                                                    FontSize="14"
                                                    Text="{Binding WhereToStay.Address}"
                                                    TextColor="{DynamicResource Gray-600}" />
                                            </StackLayout>

                                            <StackLayout
                                                Grid.Row="2"
                                                Grid.ColumnSpan="2"
                                                Margin="0,10,0,0"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="FillAndExpand">
                                                <Label
                                                    FontSize="18"
                                                    HorizontalOptions="StartAndExpand"
                                                    Text="Contact"
                                                    TextColor="{DynamicResource SecondaryColor}" />
                                                <StackLayout
                                                    Margin="0,-5,0,0"
                                                    Orientation="Horizontal"
                                                    Spacing="0">
                                                    <Label
                                                        FontSize="14"
                                                        Text="{Binding WhereToStay.Phone1}"
                                                        TextColor="{DynamicResource Gray-600}" />
                                                    <Label
                                                        FontSize="14"
                                                        Text=", "
                                                        TextColor="{DynamicResource Gray-600}" />
                                                    <Label
                                                        FontSize="14"
                                                        Text="{Binding WhereToStay.Phone2}"
                                                        TextColor="{DynamicResource Gray-600}" />
                                                </StackLayout>
                                                <Label
                                                    FontSize="14"
                                                    Text="{Binding WhereToStay.Email}"
                                                    TextColor="{DynamicResource Gray-600}" />
                                                <Label
                                                    FontSize="14"
                                                    Text="{Binding WhereToStay.Website}"
                                                    TextColor="{DynamicResource Gray-600}" />
                                            </StackLayout>

                                            <Button
                                                Grid.Row="3"
                                                Grid.ColumnSpan="2"
                                                Margin="0,10,0,20"
                                                Padding="15,10,15,10"
                                                BackgroundColor="{DynamicResource PrimaryColor}"
                                                Command="{Binding OpenLink}"
                                                CornerRadius="5"
                                                Text="Book Now"
                                                TextColor="{DynamicResource Gray-White}" />

                                        </Grid>
                                    </StackLayout>
                                </Grid>

                                <!--  Photos view  -->
                                <Grid
                                    HorizontalOptions="FillAndExpand"
                                    IsVisible="{Binding ShowPhoto}"
                                    RowSpacing="0"
                                    VerticalOptions="FillAndExpand">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <CollectionView
                                        Margin="10"
                                        HeightRequest="400"
                                        ItemsSource="{Binding WhereToStay.Images}"
                                        SelectionMode="None">
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout
                                                HorizontalItemSpacing="2"
                                                Orientation="Vertical"
                                                Span="3"
                                                VerticalItemSpacing="2" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout>
                                                    <ffimageloading:CachedImage
                                                        Aspect="AspectFill"
                                                        CacheDuration="50"
                                                        DownsampleToViewSize="True"
                                                        ErrorPlaceholder="enugu.png"
                                                        HeightRequest="120"
                                                        HorizontalOptions="FillAndExpand"
                                                        LoadingPlaceholder="enugu.png"
                                                        RetryCount="3"
                                                        RetryDelay="600"
                                                        Source="{Binding ImageUrl}" />
                                                    <StackLayout.GestureRecognizers>
                                                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Photo_Tapped" />
                                                    </StackLayout.GestureRecognizers>
                                                </StackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>

                                        <CollectionView.EmptyView>
                                            <ContentView>
                                                <StackLayout>
                                                    <Label
                                                        Margin="10,25,10,10"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HorizontalOptions="Fill"
                                                        HorizontalTextAlignment="Center"
                                                        Text="No Record found"
                                                        TextColor="{DynamicResource SecondaryLighterColor}" />
                                                </StackLayout>
                                            </ContentView>
                                        </CollectionView.EmptyView>

                                    </CollectionView>
                                </Grid>

                                <!--  Videos view  -->
                                <Grid
                                    HorizontalOptions="FillAndExpand"
                                    IsVisible="{Binding ShowVideo}"
                                    RowSpacing="0"
                                    VerticalOptions="FillAndExpand">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <CollectionView
                                        Margin="10"
                                        HeightRequest="400"
                                        ItemsSource="{Binding YoutubeVideos}"
                                        SelectionMode="None">
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout
                                                HorizontalItemSpacing="5"
                                                Orientation="Vertical"
                                                Span="2"
                                                VerticalItemSpacing="5" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <yummy:PancakeView CornerRadius="8" HeightRequest="150">
                                                    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                                        <ffimageloading:CachedImage
                                                            Aspect="AspectFill"
                                                            CacheDuration="50"
                                                            DownsampleToViewSize="True"
                                                            ErrorPlaceholder="enugu.png"
                                                            LoadingPlaceholder="enugu.png"
                                                            RetryCount="3"
                                                            RetryDelay="600"
                                                            Source="{Binding Thumbnail}" />
                                                        <BoxView BackgroundColor="{DynamicResource OpacityLightColor}" />
                                                        <Label
                                                            Margin="10"
                                                            FontAttributes="Bold"
                                                            FontSize="14"
                                                            LineBreakMode="TailTruncation"
                                                            MaxLines="2"
                                                            Text="{Binding Title}"
                                                            TextColor="{DynamicResource Gray-White}"
                                                            VerticalOptions="EndAndExpand" />
                                                        <Label
                                                            FontFamily="FAB"
                                                            FontSize="40"
                                                            HorizontalOptions="CenterAndExpand"
                                                            Text="{x:Static fa:fa.Youtube}"
                                                            TextColor="{DynamicResource RedColor}"
                                                            VerticalOptions="CenterAndExpand" />
                                                    </Grid>

                                                    <yummy:PancakeView.GestureRecognizers>
                                                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Video_Tapped" />
                                                    </yummy:PancakeView.GestureRecognizers>
                                                </yummy:PancakeView>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>

                                        <CollectionView.EmptyView>
                                            <ContentView>
                                                <StackLayout>
                                                    <Label
                                                        Margin="10,25,10,10"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HorizontalOptions="Fill"
                                                        HorizontalTextAlignment="Center"
                                                        Text="No Record found"
                                                        TextColor="{DynamicResource SecondaryLighterColor}" />
                                                </StackLayout>
                                            </ContentView>
                                        </CollectionView.EmptyView>

                                    </CollectionView>
                                </Grid>

                            </Grid>
                        </Grid>

                    </StackLayout>
                </Grid>
            </tourism:myScrollView>


        </Grid>
        <Label
            x:Name="TitleText"
            Padding="0"
            HeightRequest="60"
            HorizontalTextAlignment="Center"
            IsVisible="false"
            LineBreakMode="TailTruncation"
            Text="{Binding WhereToStay.Name}"
            VerticalOptions="Start"
            VerticalTextAlignment="Center" />


        <Button
            Padding="0,0,0,0"
            BackgroundColor="Transparent"
            BorderColor="White"
            Command="{Binding GoBack}"
            FontFamily="FAS"
            FontSize="30"
            HeightRequest="30"
            HorizontalOptions="Start"
            Text="{x:Static fa:fa.ArrowLeft}"
            TextColor="{DynamicResource Gray-100}"
            VerticalOptions="Start"
            WidthRequest="30">

            <Button.Margin>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="15,30,0,0" />
                    <On Platform="Android" Value="15,15,0,0" />
                </OnPlatform>
            </Button.Margin>
        </Button>
    </Grid>
</ContentPage>